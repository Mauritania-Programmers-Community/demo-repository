{
  "name": "mpc-demo-repository",
  "version": "1.0.0",
  "description": "Mauritania Programmers Community - Demo Repository for learning Git, GitHub, and web development",
  "scripts": {
    "start": "npx live-server --port=3000 --open=index.html --watch=.",
    "lint:html": "npx htmlhint '**/*.html' --ignore 'node_modules/**'",
    "lint:css": "npx stylelint '**/*.css' --ignore-path .gitignore",
    "lint:js": "npx eslint '**/*.js'",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "format": "npx prettier --write '**/*.{html,css,js,md,json}' --ignore-path .gitignore",
    "format:check": "npx prettier --check '**/*.{html,css,js,md,json}' --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mauritania-Programmers-Community/demo-repository.git"
  },
  "keywords": [
    "learning",
    "git",
    "github",
    "web-development",
    "mauritania",
    "html",
    "css",
    "javascript",
    "tailwind",
    "bilingual",
    "beginner-friendly"
  ],
  "author": "Mauritania Programmers Community",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mauritania-Programmers-Community/demo-repository/issues"
  },
  "homepage": "https://github.com/Mauritania-Programmers-Community/demo-repository#readme",
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
